{
  "compilerOptions": {
    "target": "es2017",
    "rootDirs": [
      "src",
      "stories",
      "config"
    ],
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "build",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports":true
  },
  "include": [
              "src/**/*.ts",
              "src/*.ts",
              "src/*.js",
              "src/transaction/"
          ],
  "exclude": ["node_modules",               
               "build"]
}
